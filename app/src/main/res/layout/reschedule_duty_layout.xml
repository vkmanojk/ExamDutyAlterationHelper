<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display_duty_name_reschedule"
            android:text="Duty Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display_duty_date_reschedule"
            android:text="Date"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/display_duty_name_reschedule"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display_start_time_reschedule"
            android:text="Start Time"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/display_duty_date_reschedule"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display_end_time_reschedule"
            android:text="End Time"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/display_start_time_reschedule"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display_incharge_reschedule"
            android:text="Incharge"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/display_end_time_reschedule"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display_phone_reschedule"
            android:text="Contact"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/display_incharge_reschedule"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>